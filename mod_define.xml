<?xml version="1.0" ?>

<!-- Used for defining individual modules (generally circuit boards) to be used within projects -->
<!--  -->
<moduledef>
	<properties>
		<name>string</name>							<!-- Module name -->
		<version>float</version>					<!-- Version number of this module -->
		<component>boolean</component>				<!-- Is this module a component? If so, it can be used in other modules -->
	</properties>
	
	<rectangle>
		<line_color>rgb</line_color>				<!-- Color of the line drawing -->
		<fill_color>rgb</fill_color>				<!-- Default color of fill -->
		<fill_on_color>rgb</fill_on_color>			<!-- Color used only if this is an LED, and it is on -->
		<anchor_x>integer</anchor_x>				<!-- x-value of upper-left point in rectangle -->
		<anchor_y>integer</anchor_y>				<!-- y-value of upper-left point in rectangle -->
		<width>integer</width>						<!-- Width of rectangle -->
		<height>integer</height>					<!-- Height of Rectangle -->
		<level>integer</level>						<!-- What z-level is this item in the module? -->
	</rectangle>
	
	<polygon>
		<line_color>rgb</line_color>				<!-- Color of the line drawing -->
		<fill_color>rgb</fill_color>				<!-- Default color of fill -->
		<fill_on_color>rgb</fill_on_color>			<!-- Color used only if this is an LED, and it is on -->
					<led>boolean</led>							<!-- Is this an LED? -->
		<point>										<!-- Define a point in the polygon drawing-->
			<point_number>integer</point_number>	<!-- What sequential point, starting at 0, is this one? -->
			<point_x>integer</point_x>				<!-- x-value of this point -->
			<point_y>integer</point_y>				<!-- y-value of this point -->
		</point>
		<point>	
			<point_number>integer</point_number>
			<point_x>integer</point_x>
			<point_y>integer</point_y>
		</point>
		<point>	
			<point_number>integer</point_number>
			<point_x>integer</point_x>
			<point_y>integer</point_y>
		</point>
		<level>integer</level>						<!-- What z-level is this item in the module? -->
	</polygon>
	
	<circle>
		<line_color>rgb</line_color>				<!-- Color of the line drawing -->
		<fill_color>rgb</fill_color>				<!-- Default color of fill -->
		<fill_on_color>rgb</fill_on_color>			<!-- Color used only if this is an LED, and it is on -->
		<center_x>integer</center_x>				<!-- x-value for center of circle -->
		<center_y>integer</center_y>				<!-- y-value for center of circle -->
		<radius>integer</radius>					<!-- Radius in number of pixels -->
		<level>integer</level>						<!-- What z-level is this item in the module? -->
	</circle>

	<connection>									<!-- Defines a connection on this module to an external point -->
		<name>string</name>							<!-- The name of this connection. Program should provide default -->
		<point_x>integer</point_x>					<!-- x-value of point where this connection exists -->
		<point_y>integer</point_y>					<!-- y-value of point where this connection exists -->
		<></>
	</connection>
	
	<wire>
	
	
	</wire>
	
</moduledef>